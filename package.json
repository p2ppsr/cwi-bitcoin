{
  "name": "cwi-bitcoin",
  "description": "TypeScript library for Bitcoin SV (BSV).",
  "version": "1.0.5",
  "author": "p2ppsr, ts-bitcoin, bsv v2, ...",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "lib/bundle.esm.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/p2ppsr/cwi-bitcoin.git"
  },
  "homepage": "https://github.com/p2ppsr/cwi-bitcoin#readme",
  "bugs": {
    "url": "https://github.com/p2ppsr/cwi-bitcoin/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rd /s /q lib>nul 2>&1|echo.>nul",
    "lint": "eslint -c .eslintrc.json --ext .ts --max-warnings 0 src test",
    "format": "prettier --write '{lib,test}/**/*.+(js|json)'",
    "watch": "tsc -w",
    "build": "npm run clean && npm run build:node && npm run build:browser",
    "build:node": "tsc",
    "build:browser": "webpack --mode production",
    "test:mocha": "mocha",
    "test:karma": "karma start --single-run",
    "test": "npm run test:mocha"
  },
  "keywords": [
    "bitcoin",
    "bsv",
    "blockchain",
    "bip32",
    "bip39",
    "bip68",
    "multisig",
    "ecies"
  ],
  "dependencies": {
    "aes": "0.1.0",
    "bitcoin-elliptic": "^7.0.1",
    "bn.js": "^5.1.1",
    "bs58": "4.0.1",
    "chai": "^4.2.0",
    "hash.js": "^1.1.7",
    "pbkdf2": "3.1.1",
    "randombytes": "^2.1.0"
  },
  "devDependencies": {
    "@purtuga/esm-webpack-plugin": "^1.5.0",
    "@types/bn.js": "^5.1.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.35",
    "@types/randombytes": "^2.0.0",
    "@types/sinon": "^9.0.11",
    "@types/webpack": "^4.41.26",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-ban": "^1.5.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "should": "^13.2.3",
    "sinon": "^9.0.2",
    "source-map-support": "^0.5.19",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.5.0"
  },
  "mocha": {
    "spec": "test/**/*.test.ts",
    "require": "ts-node/register",
    "reporter": "progress",
    "recursive": true
  },
